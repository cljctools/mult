#!/bin/bash

clean(){
    rm -rf resources/public/js-out out
}

purge(){
    clean
    rm -rf  .shadow-cljs .cpcache 
}

shadow(){
    ./node_modules/.bin/shadow-cljs "$@"
}

server(){
    shadow -A:dev server
    # yarn server
}

dev(){

    npm i
    shadow -A:dev watch :ui :extension :extension-bootstrap

}

compile(){
    npm i
    shadow -A:dev compile  :ui :extension :extension-bootstrap
}

release(){
    npm i
    shadow -A:dev release :ui :extension
}

tree(){
    clojure -A:dev -Stree
}



cljs_compile(){
    clj -A:dev -m cljs.main -co cljs-build.edn -c
    #  clj -A:dev -m cljs.main -co cljs-build.edn -v -c # -r
}


"$@"